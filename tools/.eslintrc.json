{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "root": true,
    "ignorePatterns" : ["node_modules", "dist", "jest.config.js"], //ignore from checking    npx eslint .
    "parser" : "@typescript-eslint/parser",
    "parserOptions" : {
        "project" : "./tsconfig.json"
    },
    "plugins":[
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules":{
        "prefer-const": 0
    }
}
